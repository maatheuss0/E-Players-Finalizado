@model Equipe
@{


    ViewData["Title"] = "Equipes";
}

<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Title"]</h1>
</div>

<script src="https://kit.fontawesome.com/429ce419a2.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="site.css">

<form class="cadastro" method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <div class="campo">
        <label>ID</label>
        <input type="text" name="IdEquipe">
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome">
    </div>

    <div class="campo">
        <label>Imagem</label>
        <input type="file" name="Imagem">
    </div>


    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table  class="table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
        <th>Excluir</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)







        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="imagem da equipe @equipe.Nome" width="50px"></td>
                <td> <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><i
                        class="fas fa-trash lixeira"></i></a></td>
            </tr>







        }
    </tbody>
</table>